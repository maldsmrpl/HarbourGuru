@model HarbourGuru.MVC.ViewModel.HarbourCardDeleteViewModel

@{
    ViewData["Title"] = "Delete Harbour Card";
}

<h1>Delete Harbour Card</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Harbour Card</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Website</dt>
        <dd class="col-sm-10">@Model.Website</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-countryCodeA2="@ViewData["countryCodeA2"]" asp-route-harbourCode="@ViewData["harbourCode"]" asp-route-harbourCardId="@Model.HarbourCardId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Harbour" asp-route-countryCodeA2="@ViewData["countryCodeA2"]" asp-route-harbourCode="@ViewData["harbourCode"]">Back to List</a>
    </form>
</div>
